@model IEnumerable<WebYalex.Models.entrega>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nueva Entrega", "Create", "", new { @class = "btn btn-success" })
</p>
<div>
    @Html.Label("Buscar:")
    @Html.TextBox("searchString", null, new { id = "searchStringInput", @class = "form-control" })
</div>
<table id="tablaEntregas" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_entrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kilometraje)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripestado_entrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripestado_devolucion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imagenestado_entrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imagenestado_devolucion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_entrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_devolucion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_empleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_vehiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_contrato)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.id_entrega)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.kilometraje)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.descripestado_entrega)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.descripestado_devolucion)
    </td>
    <td>
        <img width="50" height="50" src="@Url.Action("convertirImagenE","Entrega", new { id = item.id_entrega})" />
    </td>
    <td>
        <img width="50" height="50" src="@Url.Action("convertirImagenD","Entrega", new { id = item.id_entrega})" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.fecha_entrega)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.fecha_devolucion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.id_cliente)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.id_empleado)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.id_vehiculo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.id_contrato)
    </td>
    <td>
        <div class="action-buttons">
            @Html.ActionLink("Editar", "Edit", new { id = item.id_entrega }, new { @class = "btn btn-warning" })
        </div>
    </td>
    <td>
        <div class="action-buttons">
            @Html.ActionLink("Detalle", "Details", new { id = item.id_entrega }, new { @class = "btn btn-primary" })
        </div>
    </td>
    <td>
        <div class="action-buttons">
            @Html.ActionLink("Eliminar", "Delete", new { id = item.id_entrega }, new { @class = "btn btn-danger" })
        </div>
    </td>
</tr>
    }

</table>

@section scripts {
    <script>
        $(function () {
            // Capturar cambios en el textbox
            $('#searchStringInput').on('input', function () {
                var searchString = $(this).val().trim().toLowerCase();
                filterTable(searchString);
            });

 

            // Función para filtrar la tabla
            function filterTable(searchString) {
                $('#tablaEntregas tbody tr').each(function () {
                    var rowText = $(this).text().trim().toLowerCase();
                    if (rowText.includes(searchString)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            }
        });
    </script>
}
