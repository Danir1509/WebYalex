@model IEnumerable<WebYalex.Models.contratos>

@{
    Layout = null;
}


<style>
    .table {
        margin-bottom: 1rem;
        color: #212529;
        /*background-color: transparent;*/
        width: 100%;
        max-width: 100%;
        margin-bottom: 1rem;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
            text-align: center;
            color: #212529;
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
        }
</style>
@{
    DateTime fechaActual = ViewData["FechaActual"] as DateTime? ?? DateTime.Now;
}
<p style="font-size:26px; margin-left:83%;">Fecha: @fechaActual.ToString("dd/MM/yyyy") Hora: @fechaActual.ToString("HH:mm")</p>
<center>
    <p style="color:darkred; font-size:40px; font-weight:900;">Yalex Car Rental</p>
    <img width="470" height="250" src="https://yalexcarrental.com/wp-content/uploads/2023/01/YALEX-CAR-RENTAL-1.png" />
    <h3>
        COLONIA DINA, CONTIGUO A CALLE
        MONSERRAT
    </h3>
    <h3> #107 SAN SALVADOR</h3>
    <h3>
        EL SALVADOR (503) 6303 7690
    </h3>
    <h3>
        USA (240) 437-6467
    </h3>
    <h3>
        E-mail: yalexcarrental@gmail.com
    </h3>
</center>
<h1 style="color:darkred; font-size:35px; font-weight:900;"> Reporte contratos</h1>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_contrato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_alquiler)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_vehiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.referencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.num_referencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipo_pago)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total_renta)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_contrato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_alquiler)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_vehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.referencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.num_referencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo_pago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_renta)
            </td>

        </tr>
    }

</table>
<p style="font-size:26px; margin-left:66%;">Cantidad de contratos existentes: @(ViewData["CantidadContratos"] as int?)</p>



