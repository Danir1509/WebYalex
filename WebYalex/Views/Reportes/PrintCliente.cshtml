@model IEnumerable<WebYalex.Models.clientes>

@{
    Layout = null;
}

<style>
    .table {
        margin-bottom: 1rem;
        color: #212529;
        /*background-color: transparent;*/
        width: 100%;
        max-width: 100%;
        margin-bottom: 1rem;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
            max-width: 100%;
            color: #212529;
            white-space: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
            text-align: center;
        }

    .td {
    }

    .table thead th {
        vertical-align: bottom;
        border-bottom: 2px solid #dee2e6;
    }
</style>
@{ DateTime fechaActual = ViewData["FechaActual"] as DateTime? ?? DateTime.Now; }
<p style="font-size:26px; margin-left:80%;">Fecha: @fechaActual.ToString("dd/MM/yyyy") Hora: @fechaActual.ToString("HH:mm")</p>
<center>
    <p style="color:darkred; font-size:40px; font-weight:900;">Yalex Car Rental</p>
    <img width="470" height="250" src="https://yalexcarrental.com/wp-content/uploads/2023/01/YALEX-CAR-RENTAL-1.png" />
    <h3>
        COLONIA DINA, CONTIGUO A CALLE
        MONSERRAT
    </h3>
    <h3> #107 SAN SALVADOR</h3>
    <h3>
        EL SALVADOR (503) 6303 7690
    </h3>
    <h3>
        USA (240) 437-6467
    </h3>
    <h3>
        E-mail: yalexcarrental@gmail.com
    </h3>
</center>
<h1 style="color:darkred; font-size:35px; font-weight:900;"> Reporte Clientes</h1>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.licencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dui)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.contrasena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rol)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.licencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dui)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contrasena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rol)
            </td>
            <td>
            </td>
        </tr>
    }

</table>
<p style="font-size:26px; margin-left:69%;">Cantidad de vehiculos existentes: @(ViewData["CantidadCliente"] as int?)</p>
