@model IEnumerable<WebYalex.Models.alquileres>

@{
    ViewBag.Title = "Alquileres";
}

<h2>Alquileres</h2>

<p>
    @Html.ActionLink("Nuevo Alquiler", "Create", "", new { @class = "btn btn-success" })
    <a href="@Url.Action("PrintAlquiler", "Reportes")" class="btn btn-info" target="_blank">Reporte Alquiler</a>
</p>

<div>
    @Html.Label("Buscar:")
    @Html.TextBox("searchString", null, new { id = "searchStringInput", @class = "form-control" })
</div>
<table id="tablaAlquiler" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_alquiler)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costoalquiler)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_vehiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.inicio_alquiler)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.finalizacion_alquiler)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_alquiler)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costoalquiler)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_vehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.inicio_alquiler)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.finalizacion_alquiler)
            </td>
        </tr>
    }

</table>
@section scripts {
    <script>
        $(function () {
            // Capturar cambios en el textbox
            $('#searchStringInput').on('input', function () {
                var searchString = $(this).val().trim().toLowerCase();
                filterTable(searchString);
            });



            // Función para filtrar la tabla
            function filterTable(searchString) {
                $('#tablaAlquiler tbody tr').each(function () {
                    var rowText = $(this).text().trim().toLowerCase();
                    if (rowText.includes(searchString)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            }
        });
    </script>
}